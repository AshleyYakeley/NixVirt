    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    },
    "tasks": [
        {
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "Format & Check",
            "type": "shell",
            "command": "nix fmt && nix flake check && git rev-parse HEAD && echo Done!"
        }
    ]
}
